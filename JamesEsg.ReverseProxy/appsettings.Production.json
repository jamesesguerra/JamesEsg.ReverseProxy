{
    "Logging": {
        "LogLevel": {
            "Default": "Warning",
            "Microsoft.AspNetCore": "Error"
        }
    },
    "ReverseProxy": {
        "Routes": {
            "auth_route": {
                "ClusterId": "auth_cluster",
                "CorsPolicy": "AllowAny",
                "Match": {
                    "Host": "api-james.esg",
                    "Path": "/auth/{**catch-all}"
                },
                "Transforms": [
                    { "PathRemovePrefix": "/auth" }
                ]
            }
        },
        "Clusters": {
            "auth_cluster": {
                "Destinations": {
                    "main1": {
                        "Address": "http://identity-api:5050/"
                    }
                }
            }
        }
    }
}